            }
        }
    },
    "DEDUP": {
        "TOOLS": {
            "umitools": "umi_tools",
            "picard": "picard"
        },
        "Ecoli": {
            "paired":{
                "umitools":{
                    "OPTIONS":
                    {
                        "EXTRACT": "--extract-method string --bc-pattern AGANNNNACGT",
                        "DEDUP": "--extract-umi-method read_id"  # umitools dedup options
                    }
                },
               "picard":{
                    "OPTIONS":
                    {
                        "JAVA": "",
                        "DEDUP": "--VALIDATION_STRINGENCY SILENT"# umitools dedup options
