{
  "WORKFLOWS": "",
  "BINS": "nextsnakes/scripts",
  "MAXTHREADS": "20",
  "SETTINGS": {
    "id": {
      "condition": {
        "SAMPLES": [
          "rep_1",
          "rep_2"
        ],
        "GROUPS": [
          "WT",
          "WT"
        ],
        "TYPES": [
          "standard",
          "standard"
        ],
        "BATCHES": [
          "1",
          "1"
        ],
        "SEQUENCING": "paired",
        "REFERENCE": "GENOMES/Dm6/dm6.fa.gz",
        "INDEX": "GENOMES/Dm6/INDICES/star",
        "PREFIX": "idx",
        "ANNOTATION": {
          "GTF": "GENOMES/Dm6/dm6.gtf.gz",
          "GFF": "GENOMES/Dm6/dm6.gff3.gz"
        }
      }
    }
  },
  "SRA": {
    "TOOLS": {
      "sra": "sra"
    },
    "id": {
      "condition": {
        "sra": {
          "OPTIONS": [
            {},
            {}
          ]
        }
      }
    }
  },
  "BASECALL": {
    "TOOLS": {
      "guppy": "~/.local/bin/guppy-cpu/bin/guppy_basecaller"
    },
    "id": {
      "condition": {
        "guppy": {
          "OPTIONS": [
            {},
            {}
          ]
        }
      }
    }
  },
  "QC": {
    "TOOLS": {
      "fastqc": "fastqc"
    },
    "id": {
      "condition": {
        "fastqc": {
          "OPTIONS": [
            {},
            {}
          ]
        }
      }
    }
  },
  "TRIMMING": {
    "TOOLS": {
      "trimgalore": "trim_galore",
      "cutadapt": "cutadapt"
    },
    "id": {
      "condition": {
        "trimgalore": {
          "OPTIONS": [
            {
              "-q": "15",
              "--length": "8",
              "-e": "0.15"
            }
          ]
        },
        "cutadept": {
          "OPTIONS": [
            {
              "-q": "15",
              "--length": "8",
              "-e": "0.15"
            }
          ]
        }
      }
    }
  },
  "DEDUP": {
    "TOOLS": {
      "umitools": "umi_tools"
    },
    "id": {
      "condition": {
        "umitools": {
          "OPTIONS": [
            {
              "--extract-method": "string",
              "--bc-pattern": "AGANNNNACGT"
            },
            {
              "--extract-umi-method": "read_id"
            },
            {}
          ]
        }
      }
    }
  },
  "MAPPING": {
    "TOOLS": {
      "star": "STAR",
      "segemehl3": "segemehl.x",
      "hisat2": "hisat2",
      "bwa": "bwa mem",
      "minimap": "minimap2"
    },
    "id": {
      "condition": {
        "star": {
          "OPTIONS": [
            {
              "--sjdbGTFfeatureExon": "exon",
              "--sjdbGTFtagExonParentTranscript": "Parent",
              "--genomeSAindexNbases": "13"
            },
            {
              "--sjdbGTFfeatureExon": "exon",
              "--sjdbGTFtagExonParentTranscript": "Parent",
              "--outSAMprimaryFlag AllBestScore": ""
            }
          ]
        },
        "segemehl3": {
          "OPTIONS": [
            {},
            {}
          ]
        },
        "hisat2": {
          "OPTIONS": [
            {},
            {}
          ]
        },
        "bwa": {
          "OPTIONS": [
            {},
            {}
          ]
        },
        "minimap": {
          "OPTIONS": [
            {},
            {}
          ]
        }
      }
    }
  },
  "COUNTING": {
    "TOOLS": {
      "countreads": "featureCounts"
    },
    "FEATURES": {
      "exon": "Parent",
      "gene": "ID"
    },
    "id": {
      "condition": {
        "countreads": {
          "OPTIONS": [
            {
              "-f": "",
              "--fraction": "",
              "-p": "",
              "-O": "",
              "-M": ""
            }
          ]
        }
      }
    }
  },
  "ANNOTATE": {
    "TOOLS": {
      "annotatebed": "annotate"
    },
    "id": {
      "condition": {
        "annotatebed": {
          "ANNOFEATURE": "gene", # why not put in options as dict?
          "OPTIONS": [
            {
              "-w": "ON"
            }
          ]
        }
      }
    }
  },
  "UCSC": {
    "TOOLS": {
      "ucsc": "ucsc"
    },
    "id": {
      "condition": {
        "ucsc": {
          "OPTIONS": [
