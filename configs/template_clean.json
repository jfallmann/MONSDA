          "INDEX": "GENOMES/Dm6/INDICES/star",
          "PREFIX": "idx",
          "ANNOTATION": {
            "GTF": "GENOMES/Dm6/dm6.gtf.gz",
            "GFF": "GENOMES/Dm6/dm6.gff3.gz"
          }
        }
      }
    }
  },
  "SRA": {
    "id": {
      "condition": {
        "setting": {
          "ENV": "sra",
          "OPTIONS": [
            {}
          ]
        }
      }
    }
  },
