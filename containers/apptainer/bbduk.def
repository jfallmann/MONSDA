Bootstrap: docker
From: continuumio/miniconda3
   
%files
    ${HOME}/MONSDA/envs/bbduk.yaml /opt/envs/
   
%environment
   
%post
    ls -alrt /opt/envs
    chmod -R +x /opt/envs/bbduk.yaml
    
    ENV_NAME=bbduk
    echo ". /opt/conda/etc/profile.d/conda.sh" >> $APPTAINER_ENVIRONMENT
    echo "conda activate $ENV_NAME" >> $APPTAINER_ENVIRONMENT
   
    . /opt/conda/etc/profile.d/conda.sh
    conda env create -f /opt/envs/bbduk.yaml -p /opt/conda/envs/$ENV_NAME
    conda clean --all
   
%runscript
    exec "$@"
