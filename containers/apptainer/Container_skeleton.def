Bootstrap: docker
From: continuumio/miniconda3
   
%files
    ##environment.yaml##
    ${HOME}/MONSDA/scripts /opt/MONSDA/

%environment
   
%post
    ls -alrt /opt/envs
    chmod -R +x ##environment_short.yaml##
    
    ENV_NAME=##ENV_NAME##
    echo ". /opt/conda/etc/profile.d/conda.sh" >> $APPTAINER_ENVIRONMENT
    echo "conda activate $ENV_NAME" >> $APPTAINER_ENVIRONMENT
   
    . /opt/conda/etc/profile.d/conda.sh
    conda env create -f ##environment_short.yaml## -p /opt/conda/envs/$ENV_NAME
    conda clean --all
   
%runscript
    exec "$@"
